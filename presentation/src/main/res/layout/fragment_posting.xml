<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.example.carretmarket.features.board.post.PostingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/ev_inp_title"
            android:padding="20dp"
            android:gravity="top"
            android:hint="제목을 적어주세요"
            android:inputType="text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:text="@={vm.title}"
            android:fontFamily="@font/suite_boldextra"

            android:background="@drawable/edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ev_inp_content"/>

        <EditText
            android:padding="20dp"
            android:gravity="top"
            android:hint="오늘은 어떤 일이 일어나셨는지요?"
            android:inputType="text"
            android:id="@+id/ev_inp_content"
            android:text="@={vm.content}"
            android:fontFamily="@font/suite_boldextra"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ev_inp_title"
            app:layout_constraintBottom_toTopOf="@id/btn_submit"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="업로드"
            android:fontFamily="@font/suite_boldextra"
            android:textSize="20sp"
            android:onClick="@{()->vm.postContent()}"
            android:background="@drawable/button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="20dp"
            android:stateListAnimator="@null"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>